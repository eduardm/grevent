<div class="padding-50">
    <%= form_for(@event, :html => {:class => "form-horizontal", :role => "form"}) do |f| %>
        <% if @event.errors.any? %>
            <%= render :partial => "shared/errors", :locals => {:obj => @event} %>
        <% end %>

        <div class="form-group">
            <label class="col-sm-1 control-label no-padding-right blue bigger-110"><%= t :what %></label>

            <div class="col-xs-12 col-sm-11">
                <%= f.text_field :name, placeholder: t(:event_name), class: "col-xs-10 col-sm-7" %>
            </div>
        </div>
        <div class="space-4"></div>

        <div class="form-group">
            <label class="col-sm-1 control-label no-padding-right blue bigger-110"><%= t :why %></label>

            <div class="col-xs-12 col-sm-7">
                <%= f.text_area :description, placeholder: t(:event_description), class: "tinymce col-xs-10 col-sm-5" %>
                <%= tinymce %>
            </div>
        </div>
        <div class="space-4"></div>

        <div class="form-group">
            <label class="col-sm-1 control-label no-padding-right blue bigger-110"><%= t :when %></label>

            <div class="col-xs-12 col-sm-11">
                <div class="form-group">
                    <label class="col-sm-1 control-label smaller-90"><%= t :event_starts %></label>

                    <%= f.text_field :start_time, placeholder: t(:event_starts), class: "col-xs-10 col-sm-3" %>
                    <div class="input-group-addon clock-selector">
                        <i class="fa fa-clock-o bigger-110"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-1 control-label smaller-90"><%= t :event_ends %></label>

                    <%= f.text_field :end_time, placeholder: t(:event_ends), class: "col-xs-10 col-sm-3" %>
                    <div class="input-group-addon clock-selector">
                        <i class="fa fa-clock-o bigger-110"></i>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-1 control-label smaller-90"><%= t :event_runs_for %></label>

                    <%= f.text_field :duration, placeholder: t(:event_runs_for), class: "col-xs-10 col-sm-3" %>
                    <div class="input-group-addon clock-selector">
                        <i class="fa fa-clock-o bigger-110"></i>
                    </div>
                </div>

            </div>

        </div>
        <div class="space-4"></div>

        <div class="form-group">
            <label class="col-sm-1 control-label no-padding-right blue bigger-110"><%= t :where %></label>

            <div class="col-xs-12 col-sm-11">
                <div class="form-group">
                    <label class="col-sm-1 smaller-90"><%= t :venue_name %></label>
                    <%= text_field_tag :venue_name, @venue ? @venue.venue_name : nil, placeholder: t(:venue_name), class: "col-xs-10 col-sm-5" %>
                </div>

                <div class="form-group">
                    <label class="col-sm-1 smaller-90"><%= t :venue_address %></label>
                    <%= text_field_tag :venue_address, @venue ? @venue.venue_address : nil, placeholder: t(:venue_address), class: "col-xs-10 col-sm-5" %>
                </div>
            </div>
        </div>
        <div class="space-4"></div>

        <div class="form-group">
            <label class="col-sm-1 control-label no-padding-right blue bigger-110"><%= t :lets_go %></label>

            <div class="col-xs-12 col-sm-11">
                <%= f.select :status, selectable_status, {}, class: "col-xs-10 col-sm-6" %>
            </div>
        </div>
        <div class="space-4"></div>


        <div class="padding-30 center">
            <%= f.submit class: "btn btn-large btn-info"%>
            <a href="<%= events_url(current_user) %>" class="btn btn-large btn-grey"><%= t :cancel %></a>
        </div>

    <% end %>
</div>


<script type="text/javascript">
$(function() {


    $('#event_start_time, #event_end_time').datetimepicker({
        sideBySide: true,
        useCurrent: true,
        format: 'MMMM D YYYY H:mm Z'
    }).next().on(ace.click_event, function(){
        $(this).prev().focus();
    });
})
</script>
