<% unless @events.empty? %>
    <div class="col-sm-12 widget-container-col ui-sortable center-block">
        <div class="widget-box widget-color-blue" style="opacity: 1; z-index: 0;">
            <!-- #section:custom/widget-box.options -->
            <div class="widget-header">
                <h5 class="widget-title bigger lighter">
                    <i class="ace-icon fa fa-table"></i>
                    <%= t :all_events %>
                </h5>
            </div>
            <!-- /section:custom/widget-box.options -->
            <div class="widget-body">
                <div class="widget-main no-padding">
                    <table class="table table-striped table-bordered table-hover" id="tabletsTable">
                        <thead class="thin-border-bottom">
                        <tr>
                            <th>
                                <i class="ace-icon fa fa-picture-o"></i>
                                <%= t :event_name %>
                            </th>
                            <th>
                                <i class="ace-icon fa fa-align-center"></i>
                                <%= t :description %>
                            </th>

                            <th>
                                <i class="ace-icon fa fa-arrow-up"></i>
                                <%= t :event_starts %>
                            </th>

                            <th>
                                <i class="ace-icon fa fa-arrow-down"></i>
                                <%= t :event_ends %>
                            </th>

                            <th>
                                <i class="ace-icon fa  fa-clock-o"></i>
                                <%= t :event_runs_for %>
                            </th>

                            <th>
                                <i class="ace-icon fa fa-map-marker"></i>
                                <%= t :where %>
                            </th>

                            <th>
                                <i class="ace-icon fa  fa-hand-o-up"></i>
                                <%= t :created_by %>
                            </th>

                            <th>
                                <i class="ace-icon fa fa-group"></i>
                                <%= t :participants %>
                            </th>


                            <th>
                                <i class="ace-icon fa fa-cogs"></i>
                                <%= t :actions %>
                            </th>

                        </tr>
                        </thead>

                        <tbody>
                        <% @events.each do |event| %>
                            <tr>
                                <td><%= event.name %></td>
                                <td><%= truncate(event.description, length: 50) %></td>
                                <td><%= format_time event.start_time %></td>
                                <td><%= format_time event.end_time %></td>
                                <td><%= event.duration %></td>
                                <td><%= event.location.venue_address %></td>
                                <td><%= event.owner.name %></td>
                                <td><%= event.users.size %></td>
                                <td>
                                    <a href="<%= edit_event_url(event) %>" class="btn btn-app btn-primary btn-xs">
                                        <i class="ace-icon fa fa-edit"></i><%= t :edit %>
                                    </a>
                                    <%= link_to( event_url(event), method: :delete, data: {confirm: t(:are_you_sure)}, class: "btn btn-app btn-danger btn-xs") do %>
                                        <i class="ace-icon fa fa-trash-o"></i><%= t :delete %>
                                    <% end %>
                                </td>
                            </tr>
                        <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<% else %>
    <div class="col-xs-12 center-block align-center">
        <div class="padding-24">
            <h1 class="lighter blue"><%= t :no_current_events %></h1>

            <h3 class="lighter blue"><%= t :begin_create_event %></h3>
        </div>

    </div>
<% end %>
<div class="col-xs-12 center-block align-center">
    <div class="padding-50">
        <a class="btn btn-lg btn-primary" href="<%= new_event_url(current_user) %>">
            <i class="ace-icon fa fa-desktop align-top bigger-125"></i>
            <%= t :create_event %>
        </a>
    </div>
</div>

